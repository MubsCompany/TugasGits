<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="357dp"
        android:layout_height="120dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="325dp"
            android:layout_height="42dp"
            android:layout_marginLeft="35dp"
            android:ellipsize="end"
            android:fontFamily="@font/qualio"
            android:padding="5dp"
            android:textColor="#70a1ff"
            android:textSize="15sp"
            tools:text="@string/appbar_scrolling_view_behavior" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="325dp"
            android:layout_height="55dp"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="35dp"
            android:ellipsize="end"
            android:fontFamily="@font/qualio"
            android:padding="5dp"
            android:textSize="15sp"
            tools:text="@string/appbar_scrolling_view_behavior" />

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="275dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/comica"
            android:gravity="center"
            android:lines="1"
            android:padding="5dp"
            android:text="@string/app_name"
            android:textSize="11sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_news"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:src="@color/colorPrimary"
        app:layout_constraintEnd_toStartOf="@+id/relative_layout"
        app:layout_constraintStart_toStartOf="@+id/relative_layout"
        app:layout_constraintTop_toTopOf="@+id/relative_layout"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>